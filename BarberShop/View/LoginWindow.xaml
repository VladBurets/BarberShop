<Window x:Class="BarberShop.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BarberShop.View"
        mc:Ignorable="d"
         Title="Вход для администратора" Height="293" Width="485" ResizeMode="NoResize" WindowStyle="SingleBorderWindow"  >
    <Grid Background="LightGray">
        <TextBox x:Name="LoginBox" VerticalAlignment="Top" HorizontalAlignment="Left" Width="182" Margin="150,94,0,0" Height="27"></TextBox>
        <Label  Content="Логин" VerticalAlignment="Top" HorizontalAlignment="Left" Width="48" Margin="150,63,0,0"/>
        <Label  Content="Пароль" VerticalAlignment="Top" HorizontalAlignment="Left" Width="54" Margin="150,121,0,0"/>
        <PasswordBox x:Name="PasswordBox" VerticalAlignment="Top" HorizontalAlignment="Left" Width="182" Margin="150,152,0,0" Height="27"/>
        <Button Background="Gray" Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Left" Width="182" Margin="150,198,0,0" Content="Вход" Height="25" Click="Button_Click"></Button>
    </Grid>
</Window>
